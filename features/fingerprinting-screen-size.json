{
    "_meta": {
        "description": "Protection from screen size fingerprinting",
        "sampleExcludeRecords": {
            "domain": "example.com",
            "reason": "site breakage"
        }
    },
    "settings": {
        "availTop": {
            "type": "number",
            "value": 0
        },
        "availLeft": {
            "type": "number",
            "value": 0
        },
        "colorDepth": {
            "type": "number",
            "value": 24
        },
        "pixelDepth": {
            "type": "number",
            "value": 24
        }
    },
    "exceptions": [
        {
            "domain": "gamestop.com",
            "reason": "Clicking 'add to cart' causes a spinner to load briefly, and the item doesn't get added to the cart."
        },
        {
            "domain": "godaddy.com",
            "reason": "After entering login details and clicking to log in, the site shows an adwall and prevents login."
        },
        {
            "domain": "hyatt.com",
            "reason": "Site loads blank and does not proceed."
        },
        {
            "domain": "secureserver.net",
            "reason": "After entering login details and clicking to log in, the site shows an adwall and prevents login."
        }
    ],
    "_patches": {
        "android": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            },
            {
                "op": "add",
                "path": "/exceptions/-",
                "value": {
                    "domain": "youtube.com",
                    "reason": "https://github.com/duckduckgo/privacy-configuration/issues/557"
                }
            }
        ],
        "extension-brave": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-bravemv3": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-chrome": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-chromemv3": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            }
        ],
        "extension-edg": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-edge": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-edgmv3": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-firefox": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "extension-safarimv3": [
            {
                "op": "remove",
                "path": "/state"
            }
        ],
        "ios": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            }
        ],
        "macos": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            }
        ],
        "windows": [
            {
                "op": "remove",
                "path": "/state"
            }
        ]
    }
}