{
    "_meta": {
        "description": "Autofilling of duck email, identities, credentials, etc",
        "sampleExcludeRecords": {
            "domain": "example.com",
            "reason": "site breakage"
        }
    },
    "exceptions": [
        {
            "domain": "containerstore.com",
            "reason": "Generally poor UX - no username saved on signup, prompts for Duck address on 'forgot password'."
        },
        {
            "domain": "roll20.net",
            "reason": "Performance issue for too many fields."
        }
    ],
    "_patches": {
        "android": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            },
            {
                "op": "add",
                "path": "/features",
                "value": {
                    "canInjectCredentials": {
                        "state": "enabled"
                    },
                    "canSaveCredentials": {
                        "state": "enabled"
                    },
                    "canAccessCredentialManagement": {
                        "state": "enabled"
                    }
                }
            }
        ],
        "extension": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            }
        ],
        "ios": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            },
            {
                "op": "add",
                "path": "/features",
                "value": {
                    "credentialsSaving": {
                        "state": "internal"
                    },
                    "credentialsAutofill": {
                        "state": "internal"
                    },
                    "inlineIconCredentials": {
                        "state": "internal"
                    },
                    "accessCredentialManagement": {
                        "state": "internal"
                    }
                }
            }
        ],
        "macos": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            }
        ],
        "windows": [
            {
                "op": "replace",
                "path": "/state",
                "value": "enabled"
            }
        ]
    }
}